<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="email_template_product_info" model="mail.template">
            <field name="name">Product Info Excel Report</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="subject">Product Information for Delivery <t t-out="object.name or ''"/></field>
            <field name="email_from"><t t-out="object.company_id.email or ''"/></field>
            <field name="email_to"><t t-out="object.partner_id.email or ''"/></field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear <t t-out="object.partner_id.name or ''"/>,
                        <br/><br/>
                        Please find attached the product information for your delivery <span style="font-weight:bold;" t-out="object.name or ''"/>.
                        <br/><br/>
                        If you have any questions, please don't hesitate to contact us.
                        <br/><br/>
                        Best regards,<br/>
                        <t t-out="object.company_id.name or ''"/>
                    </p>
                </div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>

        <record id="email_template_product_info_sale_order" model="mail.template">
            <field name="name">Product Info Excel Report (Sale Order)</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="subject">Product Information for Order <t t-out="object.name or ''"/></field>
            <field name="email_from"><t t-out="object.company_id.email or ''"/></field>
            <field name="email_to"><t t-out="object.partner_id.email or ''"/></field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear <t t-out="object.partner_id.name or ''"/>,
                        <br/><br/>
                        Please find attached the product information for your order <span style="font-weight:bold;" t-out="object.name or ''"/>.
                        <br/><br/>
                        If you have any questions, please don't hesitate to contact us.
                        <br/><br/>
                        Best regards,<br/>
                        <t t-out="object.company_id.name or ''"/>
                    </p>
                </div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>