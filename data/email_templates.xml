<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="email_template_product_info" model="mail.template">
            <field name="name">Product Info Excel Report</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="subject">Product Information for {{ ctx.get('is_sale_order') and 'Order' or 'Delivery' }} {{ object.name }}</field>
            <field name="email_from">{{ object.company_id.email }}</field>
            <field name="email_to">{{ object.partner_id.email }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear <t t-out="object.partner_id.name or ''">Brandon Freeman</t> (<t t-out="object.partner_id.parent_id.name or ''">Azure Interior</t>),
                        <br/><br/>
                        Please find attached the product information for your 
                        <t t-if="ctx.get('is_sale_order')">
                            order <span style="font-weight:bold;"><t t-out="ctx.get('sale_order_name') or ''">S00001</t></span>.
                        </t>
                        <t t-else="">
                            delivery <span style="font-weight:bold;"><t t-out="object.name or ''">WH/OUT/00001</t></span>.
                        </t>
                        <br/><br/>
                        If you have any questions, please don't hesitate to contact us.
                        <br/><br/>
                        Best regards,<br/>
                        <t t-out="object.user_id.signature or object.company_id.name or ''">--<br/>Mitchell Admin</t>
                    </p>
                </div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>