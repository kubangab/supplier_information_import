<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_supplier_product_tree" model="ir.ui.view">
        <field name="name">supplier.product.tree</field>
        <field name="model">supplier.product</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="supplier_id"/>
                <field name="product_id"/>
                <field name="supplier_product_code"/>
                <field name="serial_number"/>
            </tree>
        </field>
    </record>

    <record id="view_supplier_product_form" model="ir.ui.view">
        <field name="name">supplier.product.form</field>
        <field name="model">supplier.product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="supplier_id"/>
                            <field name="product_id"/>
                        </group>
                        <group>
                            <field name="supplier_product_code"/>
                            <field name="serial_number"/>
                            <field name="password"/>
                            <field name="dev_key"/>
                            <field name="dev_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_supplier_product_search" model="ir.ui.view">
        <field name="name">supplier.product.search</field>
        <field name="model">supplier.product</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="supplier_id"/>
                <field name="product_id"/>
                <field name="supplier_product_code"/>
                <field name="serial_number"/>
            </search>
        </field>
    </record>

    <record id="action_supplier_product" model="ir.actions.act_window">
        <field name="name">Supplier Products</field>
        <field name="res_model">supplier.product</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_supplier_product"
              name="Supplier Products"
              action="action_supplier_product"
              parent="stock.menu_stock_inventory_control"
              sequence="90"/>
</odoo>
