<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="import_combination_rule_comp_rule" model="ir.rule">
            <field name="name">Import Combination Rule multi-company rule</field>
            <field name="model_id" ref="model_import_combination_rule"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('config_id', '=', False), ('config_id.company_id', 'in', company_ids)]</field>
        </record>

        <!-- New security group for sending product info -->
        <record id="group_send_product_info" model="res.groups">
            <field name="name">Send Product Info</field>
            <field name="category_id" ref="base.module_category_inventory_inventory"/>
            <field name="implied_ids" eval="[(4, ref('stock.group_stock_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>